<% include ../partials/header %>

<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<h3>Мои заведения:</h3>
		<% if(cafes.length < 1) { %>
                <h6 class="mt-4 ml-2"><em>Вы не добавили ни одного заведения</em></h6> 
        <% } else { %>
				<ul>
				<% cafes.forEach(function(cafe) { %>
					<li><a href="/cafes/<%= cafe.id %>"><%= cafe.name %></a></li>
				<% }); %>
				</ul>
		<% } %>
	</div>
	<div class="col-md-3"></div>
</div>

<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<h3>Мои комментарии:</h3>
		<% if(comments.length < 1) { %>
                <h6 class="mt-4 ml-2"><em>Вы не добавили ни одного комментария</em></h6> 
        <% } else { %>
			<ul>
			<% comments.forEach(function(comment) { %>
				<li><%= comment.text %> - <a href="/cafes/<%= comment.cafe.id %>"><%=comment.cafe.name %></a></li>
			<% }); %>
			</ul>
		<% } %>
	</div>
	<div class="col-md-3"></div>
</div>

